<div class="container">
	<h1>Listing Payment Schedules</h1>

		<form class="form-search">
			<%= link_to 'New Payment', new_customer_work_schedule_path, :class => "btn btn-primary pull-left" %><br /><br />
		</form>
	

	<table class="table table-hover">

	  	<tr>
		    <th>Sc No.</th>
		    <th>Task Work</th>
		    <th>Duration</th>
		    <th>Start Date</th>
		    <th>Finish Date</th>
	  	</tr>
	  	
		<% @customer.work_schedules.each do |c| %>
		    <tr>
		      <td><%= c.id %></td>
		      <td><%= c.task_work %></td>
		      <td><%= pluralize(c.duration, 'Day') %></td>
		      <td><%= c.start_date %></td>
		      <td><%= c.finish_date %></td>
		    </tr>
	    <% end %>
	</table>

</div>