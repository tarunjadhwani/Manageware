<%= render 'layouts/customer_header' %>
<h1 class="text-center">Create Work Order</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for [@customer, @customer.build_work_order], :url =>   show_customer_path do |f| %>
    <%= render 'shared/error_messages', object: f.object %> 
   
      <%= f.label :area %>
      <%= f.text_field :area %>

      <%= f.label :payment_type %>
      <%= f.text_field :payment_type %>

      <%= f.label :amount %>
      <%= f.text_field :amount %>

      <%= link_to "Cancel", customer_path(@customer), class: "btn btn-large btn-primary btn-width-small" %>
      <%= f.submit "Submit Details", class: "btn btn-large btn-primary btn-width-small pull-right" %>
    <% end %>
  </div>
</div>