
<h1 class="text-center">Create Drawing Report</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for [@customer, @payment_schedule], :url =>   customer_payment_schedules_path(@customer, @payment_schedules) do |f| %>
    <%= render 'shared/error_messages', object: f.object %> 
   
      <%= f.label :status %>
      <%= f.select :status, options_for_select(['Advance', '1st Installment', '2nd Installment', '3rd Installment', '4th Installment', '5th Installment', '6th Installment']) %>

      <%= f.label :amount %>
      <%= f.text_field :amount %>

      <%= f.label :payment_date %>
      <%= f.date_field :payment_date, placeholder: "dd/mm/yyyy" %>

      <%= f.submit "Submit Details", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>