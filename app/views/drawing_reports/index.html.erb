<div class="container">
	<h1>Listing Drawing Reports</h1>

		<form class="form-search">
			<input type="text" class="input-medium search-query">
			<button type="submit" class="btn">Search Drawing Reports</button>
			<%= link_to 'New Drawing Report', new_customer_drawing_report_path, :class => "btn btn-primary pull-right" %>
		</form>
	

	<table class="table table-hover">

	  	<tr>
		    <th>Drawing No.</th>
		    <th>Rev. No.</th>
		    <th>List of Drawing</th>
		    <th>Issue Drawing</th>
		    <th>Copy</th>
		    <th>Date</th>
	  	</tr>
	  	
		<% @customer.drawing_reports.each do |c| %>
		    <tr>
		      <td><%= c.id %></td>
		      <td><%= c.revision_no %></td>
		      <td><%= c.list_of_drawing %></td>
		      <td><%= c.issue_drawing %></td>
		      <td><%= c.copy %></td>
		      <td><%= c.date_completed %></td>
		    </tr>
	    <% end %>
	</table>

</div>