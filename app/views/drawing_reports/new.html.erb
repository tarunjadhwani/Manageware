<%= render 'layouts/customer_header' %>
<h1 class="text-center">Create Drawing Report</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for [@customer, @drawing_report], :validate => true, :url =>   customer_drawing_reports_path(@customer, @drawing_reports) do |f| %>

      <%= f.label :revision_no, "Revesion No:" %>
      <%= f.select :revision_no, options_for_select(['N/A', '1', '2', '3', '4', '5', '6']) %>

      <%= f.label :list_of_drawing, "List of drawing:"%>
      <%= f.text_field :list_of_drawing %>

      <%= f.label :issue_drawing, "Issue drawing:" %>
      <%= f.select :issue_drawing, options_for_select(['Architect','Contractor']) %>

      <%= f.label :date_completed, "Date completed:" %>
      <%= f.date_field :date_completed, placeholder: "dd/mm/yyyy" %>

      <%= f.label :copy, "Copy:" %>
      <%= f.check_box :copy %> <br /> <br />

      <%= link_to "Cancel", customer_drawing_reports_path(@customer), class: "btn btn-large btn-primary btn-width-small" %>
      <%= f.submit "Submit Details", class: "btn btn-large btn-primary btn-width-small pull-right" %>
    <% end %>
  </div>
</div>